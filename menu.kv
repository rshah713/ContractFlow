<BottomMenu>:
    cols: 3
    spacing: 75
    padding: 100, 10, 100, 0
        
    canvas.before:
        Color:
            rgb: root.rgb(245, 213, 95)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: root.rgb(13, 59, 102)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
                
                
    GridLayout:
        cols: 1
        Button:
            background_normal: ''
            background_color: 1, 1, 1, 0
            background_down: ''
            size_hint_y: .5
            
            on_release:
                app.root.current = root.last_screen[0]
                
            Image:
                source: 'assets/back.png'
                y: self.parent.y + self.parent.height - self.parent.size[1]
                x: self.parent.x

                size: self.parent.size
                allow_stretch: True
                    
                    
        Label:
            text: 'Back'
            font_size: 25
            color: root.rgb(13, 59, 102)
    GridLayout:
        cols: 1
        Button:
            size_hint_y: .5
            background_normal: ''
            background_color: 1, 1, 1, 0
            background_down: ''
            on_release:
                app.root.current = 'dashboard'
                
                
            Image:
                source: 'assets/home.png'
                y: self.parent.y + self.parent.height - self.parent.size[1]
                x: self.parent.x

                size: self.parent.size
                allow_stretch: True
                
            
        Label:
            text: 'Home'
            font_size: 25
            color: root.rgb(13, 59, 102)
    GridLayout:
        cols: 1
        Button:
            background_normal: ''
            background_color: 1, 1, 1, 0
            background_down: ''
            size_hint_y: 1
            on_release:
                app.root.current = 'manage location'

            Image:
                source: 'assets/map.png'
                y: self.parent.y + self.parent.height - self.parent.size[1]
                x: self.parent.x

                size: self.parent.size
                allow_stretch: True
            
        Label:
            text: 'Locations'
            font_size: 25
            color: root.rgb(13, 59, 102)
  
